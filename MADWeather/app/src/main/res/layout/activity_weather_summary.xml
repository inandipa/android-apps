<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.indra.madweather.Weather_summary">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temp"
        android:id="@+id/textViewtem"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hum"
        android:id="@+id/textViewhum"
        android:layout_below="@+id/textViewtem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pre"
        android:id="@+id/textViewpre"
        android:layout_below="@+id/textViewhum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temp_value"
        android:id="@+id/textViewtem_value"
        android:padding="10dp"
        android:layout_alignTop="@+id/textViewtem"
        android:layout_toRightOf="@+id/textViewtem"
        android:layout_toEndOf="@+id/textViewtem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hum_value"
        android:id="@+id/textViewHum_value"
        android:layout_alignTop="@+id/textViewhum"
        android:layout_toRightOf="@+id/textViewhum"
        android:layout_toEndOf="@+id/textViewhum"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/weather"
        android:id="@+id/textViewweather"
        android:layout_below="@+id/textViewpre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pre_value"
        android:id="@+id/textViewpre_value"
        android:layout_above="@+id/textViewweather"
        android:padding="10dp"
        android:layout_alignTop="@+id/textViewpre"
        android:layout_toRightOf="@+id/textViewpre"
        android:layout_toEndOf="@+id/textViewpre"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/weater_value"
        android:id="@+id/textViewweather_value"
        android:layout_below="@+id/textViewpre_value"
        android:padding="10dp"
        android:layout_alignTop="@+id/textViewweather"
        android:layout_toRightOf="@+id/textViewweather"
        android:layout_toEndOf="@+id/textViewweather"/>

</RelativeLayout>
